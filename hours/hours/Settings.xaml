                                <Storyboard>
                                    <DoubleAnimation 
                                        Storyboard.TargetName="CLO"
                                        Storyboard.TargetProperty="(FontSize)" 
                                        To="9" Duration="0:0:0.30" AutoReverse="False"/>
                                </Storyboard>

                            </BeginStoryboard>
                        </EventTrigger>
                    </Viewbox.Triggers>
                    <Label x:Name="CLO">Clock</Label>
                </Viewbox>


                <Viewbox Grid.Row="2" MouseDown="toWeath"   >
                    <Viewbox.Triggers>
                        <EventTrigger RoutedEvent="Viewbox.MouseEnter">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation 
                                        Storyboard.TargetName="WEA"
                                        Storyboard.TargetProperty="(FontSize)" 
                                        To="30" Duration="0:0:0.30" AutoReverse="False"/>
                                </Storyboard>

                            </BeginStoryboard>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="Viewbox.MouseLeave">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation 
                                        Storyboard.TargetName="WEA"
                                        Storyboard.TargetProperty="(FontSize)" 
                                        To="9" Duration="0:0:0.30" AutoReverse="False"/>
                                </Storyboard>

                            </BeginStoryboard>
                        </EventTrigger>
                    </Viewbox.Triggers>
