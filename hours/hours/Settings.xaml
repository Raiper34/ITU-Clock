                                <Storyboard>
                                    <DoubleAnimation 
                                        Storyboard.TargetName="SD"
                                        Storyboard.TargetProperty="(FontSize)" 
                                        To="9" Duration="0:0:0.30" AutoReverse="False"/>
                                </Storyboard>

                            </BeginStoryboard>
                        </EventTrigger>
                    </Viewbox.Triggers>

                    <Label x:Name="SD">DIGITAL</Label>
                </Viewbox>


                <Viewbox Grid.Row="3" MouseDown="chmode" ToolTip="2"   >
                    <Viewbox.Triggers>
                        <EventTrigger RoutedEvent="Viewbox.MouseEnter">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation 
                                        Storyboard.TargetName="SB"
                                        Storyboard.TargetProperty="(FontSize)" 
                                        To="30" Duration="0:0:0.30" AutoReverse="False"/>
                                </Storyboard>

                            </BeginStoryboard>
