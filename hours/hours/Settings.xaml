<Window x:Class="hours.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="Setings" Height="450" Width="300">
    




    <Grid  x:Name="settWin" ShowGridLines="True" Background="Gray">



        <Button x:Name="settUnvisible" Visibility="Hidden">
            <Button.Triggers>
                <EventTrigger RoutedEvent="Button.Click">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation 
                                    Storyboard.TargetName="settMain"
                                    Storyboard.TargetProperty="(Opacity)" 
                                    To="0.0" Duration="0:0:1" AutoReverse="False"/>
                            <DoubleAnimation 
                                    Storyboard.TargetName="settVisual"
                                    Storyboard.TargetProperty="(Opacity)"
                                    To="0.0" Duration="0:0:1" AutoReverse="False"/>
                            <DoubleAnimation 
                                    Storyboard.TargetName="settClock"
                                    Storyboard.TargetProperty="(Opacity)"
                                    To="0.0" Duration="0:0:1" AutoReverse="False"/>
                            <DoubleAnimation 
                                    Storyboard.TargetName="settWeath"
                                    Storyboard.TargetProperty="(Opacity)"
                                    To="0.0" Duration="0:0:1" AutoReverse="False"/>
                            <DoubleAnimation 
                                    Storyboard.TargetName="settOld"
                                    Storyboard.TargetProperty="(Opacity)"
                                    To="0.0" Duration="0:0:1" AutoReverse="False"/>
                            <DoubleAnimation 
                                    Storyboard.TargetName="settEdit"
                                    Storyboard.TargetProperty="(Opacity)"
                                    To="0.0" Duration="0:0:1" AutoReverse="False"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Button.Triggers>
        </Button>



        <Button x:Name="settEditUNLoad" Visibility="Hidden">
            <Button.Triggers>
                <EventTrigger RoutedEvent="Button.Click">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation 
                                    Storyboard.TargetName="settEdit"
                                    Storyboard.TargetProperty="(Opacity)" 
                                    To="0.0" Duration="0:0:1" AutoReverse="False"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Button.Triggers>
        </Button>


        <Button x:Name="settMainLoad" Visibility="Hidden">
            <Button.Triggers>
                <EventTrigger RoutedEvent="Button.Click">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation 
                                    Storyboard.TargetName="settMain"
                                    Storyboard.TargetProperty="(Opacity)" 
                                    To="1.0" Duration="0:0:1" AutoReverse="False"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Button.Triggers>
        </Button>


        <Button x:Name="settVisualLoad" Visibility="Hidden">
            <Button.Triggers>
                <EventTrigger RoutedEvent="Button.Click">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation 
                                    Storyboard.TargetName="settVisual"
                                    Storyboard.TargetProperty="(Opacity)" 
                                    To="1.0" Duration="0:0:1" AutoReverse="False"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Button.Triggers>
        </Button>

        <Button x:Name="settClockLoad" Visibility="Hidden">
            <Button.Triggers>
                <EventTrigger RoutedEvent="Button.Click">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation 
                                    Storyboard.TargetName="settClock"
                                    Storyboard.TargetProperty="(Opacity)" 
                                    To="1.0" Duration="0:0:1" AutoReverse="False"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Button.Triggers>
        </Button>

        <Button x:Name="settWeathLoad" Visibility="Hidden">
            <Button.Triggers>
                <EventTrigger RoutedEvent="Button.Click">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation 
                                    Storyboard.TargetName="settWeath"
                                    Storyboard.TargetProperty="(Opacity)" 
                                    To="1.0" Duration="0:0:1" AutoReverse="False"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Button.Triggers>
        </Button>



        <Button x:Name="settOldLoad" Visibility="Hidden">
            <Button.Triggers>
                <EventTrigger RoutedEvent="Button.Click">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation 
                                    Storyboard.TargetName="settOld"
                                    Storyboard.TargetProperty="(Opacity)" 
                                    To="1.0" Duration="0:0:1" AutoReverse="False"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Button.Triggers>
        </Button>






        <Button x:Name="settEditLoad" Visibility="Hidden">
            <Button.Triggers>
                <EventTrigger RoutedEvent="Button.Click">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation 
                                    Storyboard.TargetName="settEdit"
                                    Storyboard.TargetProperty="(Opacity)" 
                                    To="1.0" Duration="0:0:1" AutoReverse="False"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Button.Triggers>
        </Button>

















        <Grid x:Name="settMain" Opacity="1.0" Background="Gray" Grid.Row="0" Visibility="Visible">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.1*" />
                <RowDefinition Height="1*" />
                
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>


                <Viewbox Grid.Column="0" MouseDown="toExit" HorizontalAlignment="Left"  >
                    <Viewbox.Triggers>
                        <EventTrigger RoutedEvent="Viewbox.MouseEnter">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation 
                                        Storyboard.TargetName="X"
                                        Storyboard.TargetProperty="(FontSize)" 
                                        To="30" Duration="0:0:0.30" AutoReverse="False"/>
                                </Storyboard>

                            </BeginStoryboard>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="Viewbox.MouseLeave">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation 
                                        Storyboard.TargetName="X"
                                        Storyboard.TargetProperty="(FontSize)" 
                                        To="9" Duration="0:0:0.30" AutoReverse="False"/>
                                </Storyboard>

                            </BeginStoryboard>
                        </EventTrigger>
                    </Viewbox.Triggers>

                    <Label x:Name="X" FontFamily="Segoe MDL2 Assets" Content="&#xE894;" HorizontalAlignment="Center" VerticalAlignment="Center" ></Label>
                </Viewbox>

                <Viewbox Grid.Column="0" HorizontalAlignment="Center">
                    <TextBlock >Settings</TextBlock>
                </Viewbox>

            </Grid>




            <Grid Grid.Row="1" x:Name="connMain">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="0.2*" />

                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>



                <Viewbox Grid.Row="0" MouseDown="toVisual"   >
                    <Viewbox.Triggers>
                        <EventTrigger RoutedEvent="Viewbox.MouseEnter">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation 
                                        Storyboard.TargetName="VIS"
                                        Storyboard.TargetProperty="(FontSize)" 
                                        To="30" Duration="0:0:0.30" AutoReverse="False"/>
                                </Storyboard>

                            </BeginStoryboard>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="Viewbox.MouseLeave">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation 
                                        Storyboard.TargetName="VIS"
                                        Storyboard.TargetProperty="(FontSize)" 
                                        To="9" Duration="0:0:0.30" AutoReverse="False"/>
                                </Storyboard>

                            </BeginStoryboard>
                        </EventTrigger>
                    </Viewbox.Triggers>

                    <Label x:Name="VIS">Visual</Label>
                </Viewbox>


                <Viewbox Grid.Row="1" MouseDown="toClock"   >
                    <Viewbox.Triggers>
                        <EventTrigger RoutedEvent="Viewbox.MouseEnter">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation 
                                        Storyboard.TargetName="CLO"
                                        Storyboard.TargetProperty="(FontSize)" 
                                        To="30" Duration="0:0:0.30" AutoReverse="False"/>
                                </Storyboard>

                            </BeginStoryboard>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="Viewbox.MouseLeave">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation 
                                        Storyboard.TargetName="CLO"
                                        Storyboard.TargetProperty="(FontSize)" 
                                        To="9" Duration="0:0:0.30" AutoReverse="False"/>
                                </Storyboard>

                            </BeginStoryboard>
                        </EventTrigger>
                    </Viewbox.Triggers>
                    <Label x:Name="CLO">Clock</Label>
                </Viewbox>


                <Viewbox Grid.Row="2" MouseDown="toWeath"   >
                    <Viewbox.Triggers>
                        <EventTrigger RoutedEvent="Viewbox.MouseEnter">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation 
                                        Storyboard.TargetName="WEA"
                                        Storyboard.TargetProperty="(FontSize)" 
                                        To="30" Duration="0:0:0.30" AutoReverse="False"/>
                                </Storyboard>

                            </BeginStoryboard>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="Viewbox.MouseLeave">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation 
                                        Storyboard.TargetName="WEA"
                                        Storyboard.TargetProperty="(FontSize)" 
                                        To="9" Duration="0:0:0.30" AutoReverse="False"/>
                                </Storyboard>

                            </BeginStoryboard>
                        </EventTrigger>
                    </Viewbox.Triggers>
                    <Label x:Name="WEA">Weather</Label>
                    
                </Viewbox>



                <Viewbox Grid.Row="3" MouseDown="toOld"   >
                    <Viewbox.Triggers>
                        <EventTrigger RoutedEvent="Viewbox.MouseEnter">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation 
                                        Storyboard.TargetName="OLD"
                                        Storyboard.TargetProperty="(FontSize)" 
                                        To="30" Duration="0:0:0.30" AutoReverse="False"/>
                                </Storyboard>

                            </BeginStoryboard>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="Viewbox.MouseLeave">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation 
                                        Storyboard.TargetName="OLD"
                                        Storyboard.TargetProperty="(FontSize)" 
                                        To="9" Duration="0:0:0.30" AutoReverse="False"/>
                                </Storyboard>

                            </BeginStoryboard>
                        </EventTrigger>
                    </Viewbox.Triggers>
                    <Label x:Name="OLD" FontFamily="Segoe MDL2 Assets" Content="&#xE00B;"></Label>
                </Viewbox>



                <Viewbox Grid.Row="4" MouseDown="toReset"   >
                    <Viewbox.Triggers>
                        <EventTrigger RoutedEvent="Viewbox.MouseEnter">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation 
                                        Storyboard.TargetName="RST"
                                        Storyboard.TargetProperty="(FontSize)" 
                                        To="30" Duration="0:0:0.30" AutoReverse="False"/>
                                </Storyboard>

                            </BeginStoryboard>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="Viewbox.MouseLeave">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation 
                                        Storyboard.TargetName="RST"
                                        Storyboard.TargetProperty="(FontSize)" 
                                        To="9" Duration="0:0:0.30" AutoReverse="False"/>
                                </Storyboard>

                            </BeginStoryboard>
                        </EventTrigger>
                    </Viewbox.Triggers>

                    <Label x:Name="RST">Reset all settings to default</Label>
                </Viewbox>

            </Grid>
            
            

            

            
            
            


        </Grid>






        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        <Grid x:Name="settVisual" Opacity="0.0" Background="Gray" Visibility="Hidden" >
            <Grid.RowDefinitions>
                <RowDefinition Height="0.1*" />
                <RowDefinition Height="1*" />

            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>


            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>


                <Viewbox Grid.Column="0" MouseDown="toMain" HorizontalAlignment="Left"  >
                    <Viewbox.Triggers>
                        <EventTrigger RoutedEvent="Viewbox.MouseEnter">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation 
                                        Storyboard.TargetName="VB"
                                        Storyboard.TargetProperty="(FontSize)" 
                                        To="30" Duration="0:0:0.30" AutoReverse="False"/>
                                </Storyboard>

                            </BeginStoryboard>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="Viewbox.MouseLeave">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation 
                                        Storyboard.TargetName="VB"
                                        Storyboard.TargetProperty="(FontSize)" 
                                        To="9" Duration="0:0:0.30" AutoReverse="False"/>
                                </Storyboard>

                            </BeginStoryboard>
                        </EventTrigger>
                    </Viewbox.Triggers>

                    <Label x:Name="VB" FontFamily="Segoe MDL2 Assets" Content="&#xE248;" HorizontalAlignment="Center" VerticalAlignment="Center" ></Label>
                </Viewbox>

                <Viewbox Grid.Column="0" HorizontalAlignment="Center">
                    <TextBlock >Visual</TextBlock>
                </Viewbox>

            </Grid>


            <Grid Grid.Row="1" x:Name="connVisual">
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.5*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="0.5*" />
                    <RowDefinition Height="0.5*" />
                    <RowDefinition Height="0.5*" />


                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <Viewbox Grid.Row="0">
                    <Label>Select visual mode</Label>
                </Viewbox>


                <Viewbox Grid.Row="1" MouseDown="chmode" ToolTip="0"   >
                    <Viewbox.Triggers>
                        <EventTrigger RoutedEvent="Viewbox.MouseEnter">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation 
                                        Storyboard.TargetName="SA"
                                        Storyboard.TargetProperty="(FontSize)" 
                                        To="30" Duration="0:0:0.30" AutoReverse="False"/>
                                </Storyboard>

                            </BeginStoryboard>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="Viewbox.MouseLeave">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation 
                                        Storyboard.TargetName="SA"
                                        Storyboard.TargetProperty="(FontSize)" 
                                        To="9" Duration="0:0:0.30" AutoReverse="False"/>
                                </Storyboard>

                            </BeginStoryboard>
                        </EventTrigger>
                    </Viewbox.Triggers>

                    <Label x:Name="SA">ANALOG</Label>
                </Viewbox>


                <Viewbox Grid.Row="2" MouseDown="chmode" ToolTip="1"   >
                    <Viewbox.Triggers>
                        <EventTrigger RoutedEvent="Viewbox.MouseEnter">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation 
                                        Storyboard.TargetName="SD"
                                        Storyboard.TargetProperty="(FontSize)" 
                                        To="30" Duration="0:0:0.30" AutoReverse="False"/>
                                </Storyboard>

                            </BeginStoryboard>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="Viewbox.MouseLeave">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation 
                                        Storyboard.TargetName="SD"
                                        Storyboard.TargetProperty="(FontSize)" 
                                        To="9" Duration="0:0:0.30" AutoReverse="False"/>
                                </Storyboard>

                            </BeginStoryboard>
                        </EventTrigger>
                    </Viewbox.Triggers>

                    <Label x:Name="SD">DIGITAL</Label>
                </Viewbox>


                <Viewbox Grid.Row="3" MouseDown="chmode" ToolTip="2"   >
                    <Viewbox.Triggers>
                        <EventTrigger RoutedEvent="Viewbox.MouseEnter">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation 
                                        Storyboard.TargetName="SB"
                                        Storyboard.TargetProperty="(FontSize)" 
                                        To="30" Duration="0:0:0.30" AutoReverse="False"/>
                                </Storyboard>

                            </BeginStoryboard>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="Viewbox.MouseLeave">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation 
                                        Storyboard.TargetName="SB"
                                        Storyboard.TargetProperty="(FontSize)" 
                                        To="9" Duration="0:0:0.30" AutoReverse="False"/>
                                </Storyboard>

                            </BeginStoryboard>
                        </EventTrigger>
                    </Viewbox.Triggers>

                    <Label x:Name="SB">BINARY</Label>
                </Viewbox>



                <Grid Grid.Row="4" Height="38" VerticalAlignment="Bottom"  >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*" />

                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.3*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>

                    <Viewbox Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Label>Size: </Label>
                    </Viewbox>
                    <Slider x:Name="size" Grid.Column="1" ValueChanged="change_size"  VerticalAlignment="Center"/>

                </Grid>

                <Grid Grid.Row="5" Height="38" VerticalAlignment="Bottom"  >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*" />

                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.3*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>

                    <Viewbox Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Label>Opacity:</Label>
                    </Viewbox>
                    <Slider x:Name="opacity" Grid.Column="1" ValueChanged="change_opacity"  VerticalAlignment="Center"/>

                </Grid>

                <CheckBox x:Name="all_top" Grid.Row="6" Checked="vzdyNavrchuTrue" Unchecked="vzdyNavrchuFalse" HorizontalAlignment="Center" VerticalAlignment="Center" >Always on top of all Windows</CheckBox>


            </Grid>


        </Grid>


        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        <Grid x:Name="settClock" Opacity="0.0" Background="Gray" Visibility="Hidden">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.1*" />
                <RowDefinition Height="1*" />

            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>


            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>


                <Viewbox Grid.Column="0" MouseDown="toMain" HorizontalAlignment="Left"  >
                    <Viewbox.Triggers>
                        <EventTrigger RoutedEvent="Viewbox.MouseEnter">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation 
                                        Storyboard.TargetName="CB"
                                        Storyboard.TargetProperty="(FontSize)" 
                                        To="30" Duration="0:0:0.30" AutoReverse="False"/>
                                </Storyboard>

                            </BeginStoryboard>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="Viewbox.MouseLeave">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation 
                                        Storyboard.TargetName="CB"
                                        Storyboard.TargetProperty="(FontSize)" 
                                        To="9" Duration="0:0:0.30" AutoReverse="False"/>
                                </Storyboard>

                            </BeginStoryboard>
                        </EventTrigger>
                    </Viewbox.Triggers>

                    <Label x:Name="CB" FontFamily="Segoe MDL2 Assets" Content="&#xE248;" HorizontalAlignment="Center" VerticalAlignment="Center" ></Label>
                </Viewbox>

                <Viewbox Grid.Column="0" HorizontalAlignment="Center">
                    <TextBlock x:Name="c_text">Clock</TextBlock>
                </Viewbox>

            </Grid>



            <Grid Grid.Row="1" x:Name="connClock0" Visibility="Visible" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.2*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="0.5*" />


                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*" />

                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.3*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>

                    
                    
                    <Viewbox Grid.Column="1" HorizontalAlignment="Left">
                        <Viewbox.Triggers>
                            <EventTrigger RoutedEvent="Viewbox.MouseEnter">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation 
                                        Storyboard.TargetName="c0_msecx"
                                        Storyboard.TargetProperty="(FontSize)" 
                                        To="30" Duration="0:0:0.30" AutoReverse="False"/>
                                    </Storyboard>

                                </BeginStoryboard>
                            </EventTrigger>
                            <EventTrigger RoutedEvent="Viewbox.MouseLeave">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation 
                                        Storyboard.TargetName="c0_msecx"
                                        Storyboard.TargetProperty="(FontSize)" 
                                        To="9" Duration="0:0:0.30" AutoReverse="False"/>
                                    </Storyboard>

                                </BeginStoryboard>
                            </EventTrigger>
                        </Viewbox.Triggers>
                        <Label x:Name="c0_msecx" MouseDown="toEdit">milisec</Label>
                    </Viewbox>

                    <Viewbox Grid.Column="0">
                        <CheckBox x:Name="c0_msec" Margin="3" Checked="c0_msec_true" Unchecked="c0_msec_false" HorizontalAlignment="Center" VerticalAlignment="Center"></CheckBox>
                    </Viewbox>

                </Grid>


                <Grid Grid.Row="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*" />

                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.3*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>



                    <Viewbox Grid.Column="1" HorizontalAlignment="Left">
                        <Viewbox.Triggers>
                            <EventTrigger RoutedEvent="Viewbox.MouseEnter">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation 
                                        Storyboard.TargetName="c0_secx"
                                        Storyboard.TargetProperty="(FontSize)" 
                                        To="30" Duration="0:0:0.30" AutoReverse="False"/>
                                    </Storyboard>

                                </BeginStoryboard>
                            </EventTrigger>
                            <EventTrigger RoutedEvent="Viewbox.MouseLeave">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation 
                                        Storyboard.TargetName="c0_secx"
                                        Storyboard.TargetProperty="(FontSize)" 
                                        To="9" Duration="0:0:0.30" AutoReverse="False"/>
                                    </Storyboard>

                                </BeginStoryboard>
                            </EventTrigger>
                        </Viewbox.Triggers>
                        <Label x:Name="c0_secx" MouseDown="toEdit">seconds</Label>
                    </Viewbox>

                    <Viewbox Grid.Column="0">
                        <CheckBox x:Name="c0_sec" Margin="3" Checked="c0_sec_true" Unchecked="c0_sec_false" HorizontalAlignment="Center" VerticalAlignment="Center"></CheckBox>
                    </Viewbox>

                </Grid>


                <Grid Grid.Row="3">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*" />

                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.3*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>



                    <Viewbox Grid.Column="1" HorizontalAlignment="Left">
                        <Viewbox.Triggers>
                            <EventTrigger RoutedEvent="Viewbox.MouseEnter">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation 
                                        Storyboard.TargetName="c0_minx"
                                        Storyboard.TargetProperty="(FontSize)" 
                                        To="30" Duration="0:0:0.30" AutoReverse="False"/>
                                    </Storyboard>

                                </BeginStoryboard>
                            </EventTrigger>
                            <EventTrigger RoutedEvent="Viewbox.MouseLeave">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation 
                                        Storyboard.TargetName="c0_minx"
                                        Storyboard.TargetProperty="(FontSize)" 
                                        To="9" Duration="0:0:0.30" AutoReverse="False"/>
                                    </Storyboard>

                                </BeginStoryboard>
                            </EventTrigger>
                        </Viewbox.Triggers>
                        <Label x:Name="c0_minx" MouseDown="toEdit">minutes</Label>
                    </Viewbox>

                    <Viewbox Grid.Column="0">
                        <CheckBox x:Name="c0_min" Margin="3" Checked="c0_min_true" Unchecked="c0_min_false" HorizontalAlignment="Center" VerticalAlignment="Center"></CheckBox>
                    </Viewbox>

                </Grid>

                <Grid Grid.Row="4">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*" />

                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
