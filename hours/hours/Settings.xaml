                                </Storyboard>

                            </BeginStoryboard>
                        </EventTrigger>
                    </Viewbox.Triggers>

                    <Label x:Name="SB">BINARY</Label>
                </Viewbox>



                <Grid Grid.Row="4" Height="38" VerticalAlignment="Bottom"  >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*" />

                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
