<Window x:Class="hours.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="Setings" Height="450" Width="300">
    




    <Grid  x:Name="settWin" ShowGridLines="True" Background="Gray">



        <Button x:Name="settUnvisible" Visibility="Hidden">
            <Button.Triggers>
                <EventTrigger RoutedEvent="Button.Click">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation 
                                    Storyboard.TargetName="settMain"
                                    Storyboard.TargetProperty="(Opacity)" 
                                    To="0.0" Duration="0:0:1" AutoReverse="False"/>
                            <DoubleAnimation 
                                    Storyboard.TargetName="settVisual"
                                    Storyboard.TargetProperty="(Opacity)"
                                    To="0.0" Duration="0:0:1" AutoReverse="False"/>
                            <DoubleAnimation 
                                    Storyboard.TargetName="settClock"
                                    Storyboard.TargetProperty="(Opacity)"
                                    To="0.0" Duration="0:0:1" AutoReverse="False"/>
                            <DoubleAnimation 
                                    Storyboard.TargetName="settWeath"
                                    Storyboard.TargetProperty="(Opacity)"
                                    To="0.0" Duration="0:0:1" AutoReverse="False"/>
                            <DoubleAnimation 
                                    Storyboard.TargetName="settOld"
                                    Storyboard.TargetProperty="(Opacity)"
                                    To="0.0" Duration="0:0:1" AutoReverse="False"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Button.Triggers>
        </Button>


        <Button x:Name="settMainLoad" Visibility="Hidden">
            <Button.Triggers>
                <EventTrigger RoutedEvent="Button.Click">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation 
                                    Storyboard.TargetName="settMain"
                                    Storyboard.TargetProperty="(Opacity)" 
                                    To="1.0" Duration="0:0:1" AutoReverse="False"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Button.Triggers>
        </Button>


        <Button x:Name="settVisualLoad" Visibility="Hidden">
            <Button.Triggers>
                <EventTrigger RoutedEvent="Button.Click">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation 
                                    Storyboard.TargetName="settVisual"
                                    Storyboard.TargetProperty="(Opacity)" 
                                    To="1.0" Duration="0:0:1" AutoReverse="False"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Button.Triggers>
        </Button>

        <Button x:Name="settClockLoad" Visibility="Hidden">
            <Button.Triggers>
                <EventTrigger RoutedEvent="Button.Click">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation 
                                    Storyboard.TargetName="settClock"
                                    Storyboard.TargetProperty="(Opacity)" 
                                    To="1.0" Duration="0:0:1" AutoReverse="False"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Button.Triggers>
        </Button>

        <Button x:Name="settWeathLoad" Visibility="Hidden">
            <Button.Triggers>
