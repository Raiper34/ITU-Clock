<Window x:Class="hours.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:hours"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="400" MinHeight="400" MinWidth="400">
    <Grid>
        <Ellipse Fill="#FF4762D8" HorizontalAlignment="Center" VerticalAlignment="Center" Height="300" Width="300"/>
        <Rectangle Fill="#FFCDCD28" HorizontalAlignment="Center" VerticalAlignment="Center" Height="150" Width="12" Margin="184,35,184,185" RenderTransformOrigin="0.5,1">
            <Rectangle.RenderTransform>
                <RotateTransform x:Name="sekunda" Angle="0"/>
            </Rectangle.RenderTransform>
        </Rectangle>
     
        
        
        <Rectangle Fill="#FF27C52F" HorizontalAlignment="Center" VerticalAlignment="Center" Height="121" Width="12" Margin="190,64,190,185" RenderTransformOrigin="0.5,1">
            <Rectangle.RenderTransform>
                <RotateTransform x:Name="minuta" Angle="0"/>
            </Rectangle.RenderTransform>
        </Rectangle>
        
        
        <Rectangle Fill="#FFCD5528" HorizontalAlignment="Center" VerticalAlignment="Center" Height="75" Width="12" Margin="190,110,190,185" RenderTransformOrigin="0.5,1">
            <Rectangle.RenderTransform>
                <RotateTransform x:Name="hodina" Angle="0"/>
            </Rectangle.RenderTransform>
        </Rectangle>

        <Ellipse Fill="#FFCD3028" HorizontalAlignment="Center" VerticalAlignment="Center"  Height="50" Width="50"/>

    </Grid>
</Window>
